import 'package:bem_store/Choice_City';
import 'package:flutter/material.dart';

class City extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return new Scaffold(
      body: new Stack(
        children: <Widget>[
          new Column(
            mainAxisSize: MainAxisSize.min,
            crossAxisAlignment: CrossAxisAlignment.start,
            children:<Widget>[
              new Title(),
              new ButtonBack(),
            ],
          ),
          new Container(
            alignment: Alignment.center,
            child: Column(

              children:<Widget>[
                new Button(),
                new Button1(),
                new Button2(),
                new Button3(),
              ],
            ),
          ),
        ],
      ),
    );
  }
}

class Title extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return new Container(
      alignment: Alignment.center,
      margin: new EdgeInsets.only(
        top: 50.0,
        right: 20.0,
        left: 20.0,
        bottom: 10.0,
      ),
      child: new Column(
        children:<Widget>[
          new Text(
              "BEMstore",
              style: const TextStyle(
                fontSize: 55.0,
                color: Color(0x906CFF17),
                fontWeight: FontWeight.w600,
              )
          ),//Text
        ],//<Widget>
      ),//Column o Row
    );
  }
}

class ButtonBack extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return new Container(
      margin: new EdgeInsets.only(
        top: 10.0,
        right: 20.0,
        left: 20.0,
        bottom: 10.0,
      ),
      child: SizedBox(
        width: 50.0,
        height: 50.0,
        child: RaisedButton(
          color: Color(0xFFfeb800),
          onPressed: ()  {
            Navigator.of(context).pop();
          },
        ),
      ),
    );
  }
}
class Button extends StatefulWidget {
  @override
  EffectButton createState() => EffectButton();
}

class EffectButton extends State<Button> {
  @override
  bool isSelected = false;

  Widget checkbox(bool boolValue) {
    return Column(
      mainAxisAlignment: MainAxisAlignment.center,
      children: <Widget>[
        Checkbox(
          value: boolValue,
          onChanged: (bool value) {},
        )
      ],
    );
  }

  Widget build(BuildContext context) {
    return new Container(
      alignment: Alignment.center,
      margin: new EdgeInsets.only(
          top: 30.0,
          left: 20.0,
          right: 20.0
      ),
      height: 50.0,
      width: 180,
      //child: <Widget>[
      //new IconButton(
      // checkbox(estaSeleccionado),
      //icon: (_isFavorited ? Icon(Icons.check_circle) : Icon(Icons.panorama_fish_eye)),
      // onPressed: _Selected;
      //],
      decoration: new BoxDecoration(
        boxShadow: [
          new BoxShadow(
            color: Color(0xFFf38b02),
            offset: new Offset(10.0, 10.0),
            blurRadius: 30.0,
          ),
        ],
        borderRadius: new BorderRadius.circular(30.0),
        color: Color(0xFFfeb800),
      ),
      child: new Center(
        child: new Text(
          "NEUQUEN",
          style: const TextStyle(
            fontSize: 12.0,
            color: Color(0xFF4435a0),
            fontWeight: FontWeight.w900,
          ),
        ),
      ),
    );
  }
}

